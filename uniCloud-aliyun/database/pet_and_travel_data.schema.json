{
	"bsonType": "object",
	"required": ["category", "url", "desc", "comments"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"category": {
			"bsonType": "string",
			"title": "类别"
		},
		"url": {
			"bsonType": "string",
			"title": "图片地址"
		},
		"desc": {
			"bsonType": "string",
			"title": "图片描述"
		},
		"comments": {
			"bsonType": "array",
			"title": "评论",
			"item": {
				"bsonType": "object",
				"required": ["user_name", "user_img", "comMsg", "time"],
				"properties": {
					"user_name": {
						"bsonType": "string",
						"title": "用户名"
					},
					"user_img": {
						"bsonType": "string",
						"title": "用户头像"
					},
					"comMsg": {
						"bsonType": "string",
						"title": "用户评论信息"
					},
					"time": {
						"bsonType": "string",
						"title": "用户评论时间"
					}
				}
			}
		}
	}
}